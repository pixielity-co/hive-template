#!/usr/bin/env bash

# PhpHive CLI Wrapper
# This script calls the globally installed hive command

# Check if hive is installed globally
if ! command -v hive &> /dev/null; then
    echo "Error: hive command not found"
    echo "Please install PhpHive CLI globally:"
    echo "  composer global require phphive/cli"
    exit 1
fi

# Execute hive with all arguments
hive "$@"
