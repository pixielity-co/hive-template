#!/usr/bin/env bash

# PhpHive CLI Wrapper
# This script calls the globally installed hive command
# Make sure you have installed PhpHive CLI globally:
#   composer global require phphive/cli

# Check if hive is installed globally
if ! command -v hive &> /dev/null; then
    echo "Error: PhpHive CLI is not installed globally"
    echo ""
    echo "Install it with:"
    echo "  composer global require phphive/cli"
    echo ""
    exit 1
fi

# Forward all arguments to the global hive command
hive "$@"
