{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "phphive/monorepo",
    "description": "PHP Turborepo Monorepo",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "infection/infection": "^0.29",
        "laravel/pint": "^1.24",
        "phpstan/phpstan": "^2.0",
        "rector/rector": "^2.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
