{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "mono-php/monorepo",
    "description": "PHP Turborepo Monorepo",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "infection/infection": "^0.29",
        "laravel/pint": "^1.24",
        "phpstan/phpstan": "^2.0",
        "rector/rector": "^2.0"
    },
    "scripts": {
        "install": "./cli/bin/mono install",
        "test": "./cli/bin/mono test",
        "test:unit": "./cli/bin/mono test --unit",
        "test:feature": "./cli/bin/mono test --feature",
        "lint": "./cli/bin/mono lint",
        "format": "./cli/bin/mono format",
        "typecheck": "./cli/bin/mono typecheck",
        "refactor": "./cli/bin/mono refactor",
        "refactor:dry": "./cli/bin/mono refactor --dry-run",
        "mutate": "./cli/bin/mono mutate",
        "clean": "./cli/bin/mono clean",
        "cleanup": "./cli/bin/mono cleanup"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
