{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "mono-php/demo-app",
    "description": "Demo PHP application for monorepo testing",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "mono-php/calculator": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "laravel/pint": "^1.24"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../packages/*"
        }
    ],
    "autoload": {
        "psr-4": {
            "MonoPhp\\DemoApp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MonoPhp\\DemoApp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:feature": "phpunit --testsuite=Feature",
        "lint": "pint --test",
        "format": "pint",
        "typecheck": "phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
